@{

  Layout = "_Layout";
}

@using HairSalon.Models;

<h3>Your search for "@ViewBag.SearchTerm"</h3>
<hr />
@if (Model.Item1.Count > 0)
{
  <h4>Stylists</h4>
  <ul>
    @foreach (Stylist stylist in Model.Item1)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", "Stylists", new { id = stylist.StylistId })</li>
    }
  </ul>
  <hr />
}
else
{
  <h4>No Stylists with Matching Name</h4>
  <hr />
}

@if (Model.Item2.Count > 0)
{
  <h4>Clients</h4>
  <ul>
    @foreach (Client client in Model.Item2)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </ul>
}
else
{
  <h4>No Clients with Matching Name</h4>
}

<hr />
<p class="link">@Html.ActionLink("Go to Stylist List", "Index", "Stylists")</p>
<p class="link">@Html.ActionLink("Go to Client List", "Index", "Clients")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index")</p>