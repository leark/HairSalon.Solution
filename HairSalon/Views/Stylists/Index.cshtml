@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h3>List of Stylists</h3>
<hr />
@if (@Model.Count > 0)
{
  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>
}
else
{
  <h4>No Stylists Currently</h4>
}

<p class="link">@Html.ActionLink("Add New Stylist", "Create")</p>
<hr />
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>