@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h4>Add a New Stylist</h4>
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { required = "required" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber, new { required = "required" })
  </div>

  <div class="form-group">
    <input type="submit" value="Add Stylist" />
  </div>
}

<hr />
<p class="link">@Html.ActionLink("Back to Stylist List", "Index")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>