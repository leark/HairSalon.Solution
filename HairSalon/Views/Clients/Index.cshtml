@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h3>List of Clients</h3>
<hr />
@if (@Model.Count > 0)
{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</li>
    }
  </ul>
}
else
{
  <h4>No Clients Currently</h4>
}

<p class="link">@Html.ActionLink("Add New Client", "Create")</p>
<hr />
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>