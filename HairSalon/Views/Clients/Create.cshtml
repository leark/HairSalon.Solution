@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h4>Add a New Client</h4>
@if (ViewBag.StylistId.Items == null)
{
  <h5>No stylists. Please add a stylist first.</h5>
}
else
{
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { required = "required" })
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.PhoneNumber)
      @Html.TextBoxFor(model => model.PhoneNumber, new { required = "required" })
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId", ViewBag.StylistId, null, new { required = "required"})
    </div>

    <div class="form-group">
      <input type="submit" value="Add Client" />
    </div>
  }
}

<hr />
<p class="link">@Html.ActionLink("Back to Client List", "Index")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>