@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h4>Add a New Client</h4>
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { required = "required" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber, new { required = "required" })
  </div>

  <input type="submit" value="Add Client" />
}

<hr />
<p class="link">@Html.ActionLink("Back to Client List", "Index")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>